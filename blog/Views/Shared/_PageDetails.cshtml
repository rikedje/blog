@model EdjeBlog.Models.Page

<div class="page">
    <i class="icon-tags"></i>
    @{
        foreach (var tag in Model.Tags)
        {   
            if(tag.Length > 0)
            {
                <span>
                    @Html.ActionLink(tag, "Tag", "Tag", new { tag = tag }, new { @class="btn btn-mini"})

                </span>
                            
            }
        }
    }
    <div>
        <h1>@Model.Title</h1>
    </div>
    <div class="body">
        @Html.Raw(Model.Body)
    </div>

    <table>
        <tr>
            <td>
            
            </td>

        </tr>
        </table>
	    <br />
</div>